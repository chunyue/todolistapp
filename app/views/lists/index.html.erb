<div class="container">
<h1> To do List </h1>

 

<table class="table table-striped table-condensed table-bordered "> 
  <tr>
    <td>Done</td>
    <td>Name</td>
    <td>Due Time</td>
    <td>Note</td>
    <td>View</td>
    <td>Edit</td>
    <td>Destory</td>

  </tr>


  <% @lists.each do |list| %>
    <tr>
      
     <td>
      <%= check_box_tag :is_public, false , list.is_public, data: { url: is_public_list_path(list), method: :post, remote: true } %>
     </td> 
     <td> <%= list.name %></td>
     <td> <%= list.due_time %></td>
     <td> <%= list.note %></td>
     <td> <%= link_to '', list_path(list), class: "glyphicon glyphicon-search" %></td>
     <td> <%= link_to '', edit_list_path(list), class: "glyphicon glyphicon-pencil" %></td>
     <td> <%= link_to '', list_path(list), method: :delete, data:{confirm: "Are you sure?"}, class: "glyphicon glyphicon-trash" %>
    </td>
      
  </tr>
  <% end %>
</table> 

  <%= link_to 'New Schedule', new_list_path, class: "btn btn-primary"  %>

</div>